<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" android:textSize="25sp" android:id="@+id/tipLabel"
            android:layout_marginLeft="64dp"/>
    <EditText
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/billAmount" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginRight="85dp"/>
    <EditText
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/tipAmount" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/billAmount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginRight="85dp"/>
    <TextView
            android:text="Total:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalLabel" android:textSize="25sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/tipLabel"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"/>
    <TextView
            android:text="amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipAmountLabel" android:textSize="25sp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/calculateButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalAmountLabel" android:textSize="25sp"
            android:text="amount" android:layout_marginTop="39dp" app:layout_constraintTop_toBottomOf="@+id/tipLabel"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"/>
    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculateButton" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/tipAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tipLabel" app:layout_constraintHorizontal_bias="0.52"/>
    <TextView
            android:text="Bill Amount:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billInputLabel" android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="42dp"
            app:layout_constraintEnd_toStartOf="@+id/billAmount"
    />
    <TextView
            android:text="Tip Amount:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipInputLabel" android:textSize="25sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/billAmount"
            app:layout_constraintEnd_toStartOf="@+id/tipAmount" android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"/>

</android.support.constraint.ConstraintLayout>